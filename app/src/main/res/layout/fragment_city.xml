<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cities.CityFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <Button
            android:id="@+id/night_life"
            style="@style/CountryDetailButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/black"
            android:text="Night Life"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/eating_out"
            app:layout_constraintTop_toBottomOf="@+id/top_attractions" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:scaleType="fitXY"
            android:tint="#6F000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="#FAFFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/images"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/top_attractions"
            style="@style/CountryDetailButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="132dp"
            android:layout_marginRight="132dp"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/black"
            android:text="Attractions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_snippet" />

        <TextView
            android:id="@+id/country_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:text="Hello"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/images" />

        <Button
            android:id="@+id/tours"
            style="@style/CountryDetailButtonTheme"
            android:layout_width="128dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/black"
            android:text="Tours"
            app:layout_constraintEnd_toStartOf="@+id/top_attractions"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_snippet" />

        <Button
            android:id="@+id/hotels"
            style="@style/CountryDetailButtonTheme"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/black"
            android:text="Hotels"
            app:layout_constraintStart_toEndOf="@+id/top_attractions"
            app:layout_constraintTop_toBottomOf="@+id/country_snippet" />

        <Button
            android:id="@+id/eating_out"
            style="@style/CountryDetailButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/location"
            android:drawableTint="@color/black"
            android:text="Eating Out"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_attractions" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/eating_out"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>